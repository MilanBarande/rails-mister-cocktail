<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </p>
  <ul class="list-unstyled">
    <li><strong>Ingredients:</strong></li>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %></li>
    <% end %>
  </ul>

  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Delete cocktail", cocktail_path, method: :delete %>
  <div>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>


  <hr>

  <%= link_to 'Back', cocktails_path %>

</div>








