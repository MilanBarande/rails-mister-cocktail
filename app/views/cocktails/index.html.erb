<div class="container">
  <h2 class="title">Mr Cocktail</h2>
  <div class="row">

    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <div class="card"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= cl_image_path cocktail.photo, height: 300, width: 300, crop: :fill %>')">
      <div class="card-category">Cocktail # <%= cocktail.id %></div>
      <div class="card-description">
        <h2><%= cocktail.name %></h2>
        <p></p>
      </div>
      <%= link_to cocktail.name, cocktail, {class: "card-link"} %>
    </div>
  </div>
  <% end %>
</div>
</div>

<div class="container">
  <%= link_to "Add a new cocktail", new_cocktail_path, {class: "btn btn-primary"} %>
</div>
